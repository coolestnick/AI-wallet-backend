# Salt Wallet Backend Environment Variables Template
# Copy this file to .env and replace with your actual values

GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=salt_wallet

APP_NAME=Salt Wallet
DEBUG=true
LOG_LEVEL=INFO

# Blockchain RPC URLs
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
BITCOIN_RPC_URL=https://blockstream.info/api

# External API Keys (Optional)
COINGECKO_API_KEY=your-coingecko-api-key
DEXSCREENER_API_KEY=your-dexscreener-api-key
DEFILLAMA_API_KEY=your-defillama-api-key
GECKOTERMINAL_API_KEY=your-geckoterminal-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key

# API Base URLs (Optional - defaults provided)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
DEXSCREENER_API_URL=https://api.dexscreener.com/latest
DEFILLAMA_API_URL=https://api.llama.fi
GECKOTERMINAL_API_URL=https://api.geckoterminal.com/api/v2

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://saltwallet.xyz,https://app.saltwallet.xyz

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Development Configuration
FRONTEND_URL=http://localhost:3000